<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {% if settings.favicon != blank %}
      <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
    {% endif %}

    {{ 'global.css' | asset_url | stylesheet_tag }}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta_tags' %}
    
    {{ content_for_header }}
  </head>

  <body class="transition-all duration-500" data-state-age-gate="closed" data-state-email-capture="closed">
    {% section 'notification_banner' %}
    {% section 'header' %}
    
    {% comment %}
    {% section 'age_gate' %}
    {% endcomment %}
    
    <div>
      {{ content_for_layout }}
    </div>

    {% section 'cart' %}
    {% section 'footer' %}

    {{ 'global.js' | asset_url | script_tag }}
    {{ 'cart.js' | asset_url | script_tag }}

    {%- if request.design_mode -%}
      {{ 'shopify-editor.js' | asset_url | script_tag }}
    {%- endif -%}

  </body>
</html>
