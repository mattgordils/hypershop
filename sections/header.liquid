<script src="{{ 'nav.js' | asset_url }}" defer="defer"></script>

<div class="header duration-[300ms] page-header w-full grid gap-4 grid-cols-3 fixed top-0 z-5 p-3 pb-5 lg:p-5 text-{{ header_color }} font-wide">
  <div class="col-span-1 hamburger-home-black">
    <{% if request.page_type == 'index' %}h1{% else %}div{% endif %} class="body logo">
      <a href="{{ routes.root_url }}" title="Go to homepage">
        {{ shop.name }} Logo
      </a>
    </{% if request.page_type == 'index' %}h1{% else %}div{% endif %}>
  </div>

  {% comment %}
    Desktop Nav
  {% endcomment %}
  <div class="hidden lg:flex col-span-1 justify-center items-center z-5">
  </div>
  <div class="hidden lg:flex col-span-1 desktop-header-links-black">
    {% render 'desktop_header_links' with header_color: header_color %}
  </div>

  {% comment %}
   Mobile Nav
  {% endcomment %}
    <div class="lg:hidden col-span-2 justify-end flex space-x-4">
      {% for link in linklists.mobile-menu.links %}
        <div class="flex justify-center items-center">
          <a href="{{ link.url }}">
            {{ link.title }}
          </a>
        </div>
      {% endfor %}
      {% render 'cart_thumbnail' %}
    </div>
  </div>


{% schema %}
{
  "name": "header",
  "settings": [
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "image_picker",
        "id": "nav-logo-top",
        "label": "Nav Logo (top)"
      },
      {
        "type": "image_picker",
        "id": "nav-logo-bottom",
        "label": "Nav Logo (bottom)"
      }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
                {
                    "type": "header",
                    "content": "Content"
                },
                {
                    "type": "image_picker",
                    "id": "logo",
                    "label": "Logo"
                }
      ]
    }
  ]
}
{% endschema %}
