{% capture spacing_class %}
  {% render 'util-section-spacing' with space: section.settings.section_spacing %}
{% endcapture %}

{% capture padding_class %}
  {% render 'util-section-padding' with space: section.settings.section_padding %}
{% endcapture %}

{%-liquid
  assign hasMedia = false
  assign media_position = 'cover'
  if section.settings.image != blank
    assign hasMedia = true
  endif

  if section.settings.section_height == 'auto-height'
  assign media_position = 'unset'
  endif

  assign is_first_section = false
  if section.index == 2
    assign is_first_section = true
  endif

  assign image_loading = 'lazy'
  assign image_fetch_priority = ''
  if is_first_section
    assign image_loading = 'eager'
    assign image_fetch_priority = 'high'
  endif

  assign text_col_class = 'md:order-1'
  assign media_col_class = 'md:order-2'
  if section.settings.media_placement == 'left'
    assign text_col_class = 'md:order-2'
    assign media_col_class = 'md:order-1'
  endif

  assign wrapper_class = 'px-margin'
  assign grid_class = 'gap-x-gutter'
  if section.settings.edge_to_edge
    assign wrapper_class = ''
    assign grid_class = ''
    assign text_col_class = text_col_class | append: ' px-margin'
  endif
-%}

<div class="{{ spacing_class }} {{ padding_class }} {{ wrapper_class }} {{ section.settings.color_scheme }} section-inner">
  <div class="{{ grid_class }} grid md:grid-cols-12 gap-y-v-space-sm {{ section.settings.v_alignment }}">
    {% if section.settings.media_placement_mobile != 'bottom' %}
      <div class="md:col-span-6 {{ media_col_class }}">
        {% content_for 'block',
          type: '_media',
          id: 'media',
          loading: image_loading,
          fetchpriority: image_fetch_priority
        %}
      </div>
    {% endif %}
    <div class="md:col-span-6 z-2 flex {{ text_col_class }}">
      <div class="w-full">
        {% content_for 'block',
          type: '_text-lockup',
          id: 'text-lockup',
          classname: 'max-w-narrow text-balance'
        %}
      </div>
    </div>
    {% if section.settings.media_placement_mobile == 'bottom' %}
      <div class="md:col-span-6 {{ media_col_class }}">
        {% content_for 'block',
          type: '_media',
          id: 'media',
          loading: image_loading,
          fetchpriority: image_fetch_priority
        %}
      </div>
    {% endif %}
  </div>
</div>

