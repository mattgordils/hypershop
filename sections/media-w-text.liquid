        },
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        }
      ]
    }
	],
	"blocks": [
		{
      "type": "_text-lockup"
    }
	],
	"presets": [
    {
      "name": "Media With Text",
      "category": "Text",
      "blocks": [
        {
          "id": "media",
          "type": "_media",
          "static": true
        },
        {
          "id": "text-lockup",
          "type": "_text-lockup",
          "static": true
