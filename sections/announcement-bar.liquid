{% style %}
  :root {
    --announcement-bar-height: 30px;
    --screen-height: calc(100vh - var(--announcement-bar-height));
  }
{% endstyle %}

{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="min-h-[var(--announcement-bar-height)] py-1 px-margin flex items-center justify-center {{ block.settings.color_scheme }}" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
      {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="">
          {%- endif -%}
              <div>
                <p class="text-center body-xsmall font-semibold pb-[2px]">
                  {{ block.settings.text | escape }}
                  {%- if block.settings.link != blank -%}
                    {% render 'icon-arrow' %}
                  {%- endif -%}
                </p>
              </div>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "Announcement Bar",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center",
          "label": "Alignment"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "bg-main text-text-color",
              "label": "Brand Color"
            },
            {
              "value": "bg-text-color text-main",
              "label": "Dark"
            }
          ],
          "default": "bg-main text-text-color",
          "label": "Color Scheme"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Clicking anywhere on the announcement bar will link here"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
