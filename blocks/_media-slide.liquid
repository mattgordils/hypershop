{% comment %}
This block is meant to be a child of wide-media section
and uses section settings from the containing section
{% endcomment %}

{%-liquid
  assign height_auto = false
  assign media_position = 'cover'

  if section.settings.section_height == 'auto-height'
  assign height_auto = true
  assign media_position = 'unset'
  endif

  assign is_first_section = false
  if section.index == 2
    assign is_first_section = true
  endif

  assign image_loading = 'lazy'
  assign image_fetch_priority = ''
  if is_first_section
    assign image_loading = 'eager'
    assign image_fetch_priority = 'high'
  endif
-%}

<style>
  .section-wide-media .block-media-slide .block-media {
    {% comment %} min-height: 100%;
    width: 100%; {% endcomment %}
    flex-grow: 1;
    position: relative;
  }

  .section-wide-media .block-media-slide .block-media img,
  .section-wide-media .block-media-slide .block-media video {
    object-fit: cover;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }
</style>

<div class="media z-1 {% if height_auto %}relative{% else %}absolute top-[--header-banner-height] bottom-0 left-0 w-full{% endif %}">
  <div class="absolute top-0 left-0 w-full h-full bg-true-black z-2" style="opacity: {{ block.settings.overlay_opacity | divided_by: 100.00 }}"></div>
  <div class="absolute top-0 left-0 w-full h-full z-1 flex">
    <div class="relative w-full h-full flex flex-col md:flex-row">
      {% for block in block.blocks %}
        {% render block %}
      {% endfor %}
    </div>
  </div>
</div>
<div class="{% if height_auto %}absolute top-0 left-0 w-full h-full{% else %}h-full relative{% endif %} overlay-content z-1 flex {{ block.settings.h_alignment }} {{ block.settings.v_alignment }} px-margin pb-margin pt-[--content-padding]">
  <div class="grid gap-gutter w-full sm:w-[66.666%] xl:w-1/2 2xl:w-1/3">
    <div>
      {% content_for 'block',
        type: '_text-lockup',
        id: 'text-lockup',
        classname: 'max-w-narrow text-balance'
      %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Media Slide",
  "class": "block-media-slide h-full relative",
  "settings": [
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Overlay Opacity",
      "default": 0
    },
    {
      "type": "header",
      "content": "Alignment"
    },
    {
      "type": "select",
      "id": "v_alignment",
      "default": "items-center",
      "label": "Vertical Alignment",
      "options": [
        {
          "label": "Top",
          "value": "items-start"
        },
        {
          "label": "Center",
          "value": "items-center"
        },
        {
          "label": "Bottom",
          "value": "items-end"
        }
      ]
    },
    {
      "type": "select",
      "id": "h_alignment",
      "default": "justify-center",
      "label": "Horizontal Alignment",
      "options": [
        {
          "label": "Left",
          "value": "justify-start"
        },
        {
          "label": "Center",
          "value": "justify-center"
        },
        {
          "label": "Right",
          "value": "justify-end"
        }
      ]
    },
  ],
  "blocks": [
    {
      "type": "_media"
    },
	],
  "presets": [
    {
      "name": "Media Slide",
      "blocks": [
        {
          "type": "_media"
        },
        {
          "id": "text-lockup",
          "type": "_text-lockup",
          "static": true
        }
      ]
    }
  ]
}
{% endschema %}