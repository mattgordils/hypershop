{% liquid
  assign target = false
  if block.settings.new_tab == true
    assign target = '_blank'
  endif
%}

{% render 'button' with
  label: block.settings.label,
  target: target,
  class: block.settings.style,
  to: block.settings.link
%}

{% schema %}
{
  "name": "Button",
  "class": "block-button",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "default": "Button Text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link URL"
    },
    {
      "type": "checkbox",
      "id": "new_tab",
      "label": "Open in new tab"
    },
    {
      "type": "select",
      "id": "style",
      "default": "primary",
      "label": "Style",
      "options": [
        {
          "label": "Primary",
          "value": "primary"
        },
        {
          "label": "Secondary",
          "value": "secondary"
        }
      ]
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Button"
    }
  ]
}
{% endschema %}