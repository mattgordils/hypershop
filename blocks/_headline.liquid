        },
        {
          "label": "H3",
          "value": "h3"
        },
        {
          "label": "H4",
          "value": "h4"
        }
      ]
    },
    {
      "type": "select",
      "id": "element",
      "default": "h2",
      "label": "Headline HTML Element",
      "options": [
        {
          "label": "H1",
          "value": "h1"
        },
        {
          "label": "H2",
          "value": "h2"
        },
        {
          "label": "H3",
          "value": "h3"
        },
        {
          "label": "H4",
          "value": "h4"
        }
      ]
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Headline"
    }
  ]
}
