{% liquid
  assign target = false
  if block.settings.new_tab == true
    assign target = '_blank'
  endif
%}

{% render 'link' with
  label: block.settings.label,
  target: target,
  class: block.settings.style,
  to: block.settings.link
%}

{% schema %}
{
  "name": "Link",
  "class": "block-link",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "default": "Link Text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link URL"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Link"
    }
  ]
}
{% endschema %}