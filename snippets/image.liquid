{%-liquid
	assign objectFit = 'object-cover'
	if image_position != blank
		assign objectFit = 'object' | append: '-' | append: image_position
	endif

	assign imageSizes = '100vw'
	if sizes
		assign imageSizes = sizes | append: 'px'
	endif
	
	assign alt_text = ''
	if alt
		assign alt_text = alt
	endif

	assign imageLoading = 'lazy'
	if loading
		assign imageLoading = loading
	endif

	assign ImgWidth = src.width
	if width
		assign ImgWidth = width
	endif

	assign ImgHeight = src.height
	if height
		assign ImgHeight = height
	endif
-%}

<script>
    function revealImage(event) {
        event.target.classList.remove('opacity-0')
    }
</script>

{% if image != blank %}
	<img 
		class="{%- if imageLoading == 'lazy' -%}opacity-0 transition-opacity duration-slow {%- endif -%} {{ objectFit }} shrink-0 {% if image_position == 'cover' %}absolute top-0 left-0 w-full h-full object-cover{% else %}w-full h-auto{% endif %}" 
		id="{{ id }}"
		src="{{ image | asset_img_url: '480x' }}"
		width="{{ ImgWidth }}"
		height="{{ ImgHeight }}"
		sizes="{{ imageSizes }}"
		srcset="{{ image | asset_img_url: '640x' }} 640w,
                {{ image | asset_img_url: '720x' }} 720w,
                {{ image | asset_img_url: '900x' }} 900w,
                {{ image | asset_img_url: '1200x' }} 1200w,
                {{ image | asset_img_url: '1500x' }} 1500w,
                {{ image | asset_img_url: '1800x' }} 1800w,
                {{ image | asset_img_url: '2000x' }} 2000w"
		loading="{{ imageLoading }}"
		alt="{{ alt_text }}"
		{%- if imageLoading == 'lazy' -%}
		onLoad="revealImage(event)"
		{%- endif -%}
	>
{% else %}
	<img 
		class="{%- if imageLoading == 'lazy' -%}opacity-0 transition-opacity duration-slow {%- endif -%} {{ objectFit }} shrink-0 {% if image_position == 'cover' %}absolute top-0 left-0 w-full h-full object-cover{% else %}w-full h-auto{% endif %}" 
		id="{{ id }}"
		src="{{ src | image_url: width: '480x' }}"
		width="{{ ImgWidth }}"
		height="{{ ImgHeight }}"
		sizes="{{ imageSizes }}"
		srcset="{% if src.width > 640 %}{{ src.src | img_url: '640x' }} 640w,{% endif %}
                {% if src.width > 720 %},{{ src.src | img_url: '720x' }} 720w,{% endif %}
                {% if src.width > 900 %},{{ src.src | img_url: '900x' }} 900w,{% endif %}
                {% if src.width > 900 %},{{ src.src | img_url: '1200x' }} 1200w,{% endif %}
                {% if src.width > 900 %},{{ src.src | img_url: '1500x' }} 1500w,{% endif %}
                {% if src.width > 900 %},{{ src.src | img_url: '1800x' }} 1800w,{% endif %}
                {% if src.width > 900 %},{{ src.src | img_url: '2000x' }} 2000w,{% endif %}"
		loading="{{ imageLoading }}"
		alt="{{ alt_text }}"
		{%- if imageLoading == 'lazy' -%}
		onLoad="revealImage(event)"
		{%- endif -%}
	>
{% endif %}