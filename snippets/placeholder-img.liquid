{% style %}
	.placeholder-image, .placeholder-image-wrapper {
		width: 100%;
		height: 100%;
		background: var(--light-grey);
	}

	.placeholder-image svg {
		display: block;
	}

	.placeholder-image rect {
		fill: var(--light-grey);
	}

	.placeholder-image path {
		fill: var(--light-text-color);
		opacity: .25;
	}
{% endstyle %}

<div class="placeholder-image-wrapper{% if cover %} absolute top-0 left-0 w-full h-full{% endif %}">
	{% case icon %}
		{% when 'img-lg' %}
			<svg class="placeholder-image" height="500" viewBox="0 0 500 500" fill="none" xmlns="http://www.w3.org/2000/svg">
			<rect width="500" height="500" fill="white"/>
