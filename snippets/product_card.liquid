<article
  class="product-card flex flex-col group"
  data-product-update="product-{{ product.id }}"
  itemscope
  itemtype="https://schema.org/Product"
>
  <a
    href="{{ product.url }}"
    class="aspect-3/4 relative block border"
    aria-label="View {{ product.title }}"
  >
    <div class="relative">
      {% render 'image' with
        src: product.featured_image,
        sizes: '640px',
        ratio: '3/4',
        loading: 'lazy',
        alt: product.title,
        class: 'z-1 relative'
      %}
      {% if product.images[1] %}
        <div class="absolute top-0 left-0 w-full h-full z-2 opacity-0 group-hover:opacity-100 transition-opacity">
          {% render 'image' with
            src: product.images[1],
            sizes: '640px',
            ratio: '3/4',
            alt: product.title | append: ' - alternate view'
          %}
        </div>
      {% endif %}
    </div>
  </a>

  <div class="text-center">
    <h3 class="body">
      <a href="{{ product.url }}" itemprop="name" class="border-none pt-gutter block">
        {{ product.title }}
      </a>
    </h3>
    <div class="body-small" id="cardPrice-{{ product.id }}" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
      <meta itemprop="price" content="{{ product.first_available_variant.price | money_without_currency | remove: ',' }}">
      <meta itemprop="priceCurrency" content="{{ shop.currency }}">
      <link itemprop="availability" href="https://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">
      {% render 'product_price' with item: product.first_available_variant %}
    </div>
  </div>

  {% render 'product_option_form' with product: product %}
</article>
