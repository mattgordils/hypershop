<button
  type="submit"
  class="button add-to-cart-btn {{ class }}"
  title="{{ text }}"
>
  {% if class contains 'circle' or class contains 'sqaure' %}
    {% render 'icon-material' with icon: 'add' %}
  {% else %}
    {% render 'icon-material' with icon: 'add' %}{{ text }}
  {% endif %}
</button>
