{%-liquid
  assign image = item.product.featured_image
  if item.image
    assign image = item.image
  endif
-%}

<div id="cartLineItem" class="flex gap-x-gutter">
  <div class="w-24">
    <div class="aspect-square relative w-full rounded overflow-hidden">
      {% render 'image' with 
        src: image,
        layout: 'cover',
        loading: 'eager',
        sizes: 200,
        width: 100,
        height: 100
      %}
    </div>
  </div>
  <div id="cartUpdate" class="grow basis-0 col-span-4 flex flex-col">
    <div class="flex justify-between grow gap-x-gutter">
      <a href="{{ item.url }}">
        {{ item.product.title }}
        <div class="body-small">
          {{ item.variant.title }}
          {%- for property in item.properties -%}
            <span class="block text-light-text-color">{{ property[0] }}: {{ property[1] }}
            </span>
          {%- endfor -%}
        </div>
      </a>
      <div class="shrink-0">
        <div>
          {% render 'product_price' with
            item: item.variant,
            times: item.quantity
          %}
        </div>
        {% if qty == false %}
          <cart-remove-item>
            <button class="cart-remove-item body-small hover:!text-error !h-auto button transparent unpadd" data-item-id="{{ item.id }}">Remove</button>
          </cart-remove-item>
        {% endif %}
      </div>
    </div>
    {% if qty != false %}
      <div class="flex justify-between items-center">
        <div>
          {% render 'cart_item_quantity_adjust' with item: item %}
        </div>
        <cart-remove-item>
          <button class="cart-remove-item body-small hover:!text-error !h-auto button transparent unpadd" data-item-id="{{ item.id }}">Remove</button>
        </cart-remove-item>
      </div>
    {% endif %}
  </div>
</div>
